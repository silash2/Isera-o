<!DOCTYPE html>

<title>Boutique index</title>

{% block body %}
    <h1>Boutique index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for boutique in boutiques %}
            <tr>
                <td>{{ boutique.id }}</td>
                <td>{{ boutique.name }}</td>
                <td>{{ boutique.description }}</td>
                <td>
                    <a href="{{ path('app_boutique_show', {'id': boutique.id}) }}">show</a>
                    <a href="{{ path('app_boutique_edit', {'id': boutique.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_boutique_new') }}">Create new</a>
{% endblock %}
